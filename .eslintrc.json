{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": "error",
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "quotes": ["error", "backtick"]
  }
}